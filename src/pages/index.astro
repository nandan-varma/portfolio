---
import Water from "@/components/Water.astro";
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="m-0 p-0 flex flex-col min-h-screen relative">
		<div id="background" class="fixed inset-0 w-full h-full -z-10">
			<Water />
		</div>
		<div
			id="content"
			class="flex-1 flex justify-center items-end pb-40 gap-12 text-3xl font-bold"
		>
			<a
				href="/projects"
				class="duration-500 text-zinc-500 hover:text-neutral-100"
				transition:name={"Projects"}>Projects</a
			>
			<a
				href="/blog"
				class="duration-500 text-zinc-500 hover:text-neutral-100"
				transition:name={"Blog"}>Blog</a
			>
			<a
				href="/contact"
				class="duration-500 text-zinc-500 hover:text-neutral-100"
				transition:name={"Contact"}>Contact</a
			>
		</div>
	</body>
</html>

<style>
	body{
		background-color: black;
	}
</style>